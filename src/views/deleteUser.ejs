<%- include ('partials/_header'); %>
<%- include ('partials/_navMenu'); %>
<%- include ('partials/_bodyUpper'); %>	
<div id="content">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
			<h1 class="page-title txt-color-blueDark">
				<i class="fa fa-fw fa-user"></i> 
					Seguridade 
				<span>> 
					Borrar Usuario
				</span>
			</h1>
		</div>
    </div>
    
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-plus"></i> </span>
                        <h2>Complete el formulario </h2>				
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form id="addUser-form" class="smart-form" novalidate="novalidate" method="POST">
                                <fieldset>
                                    <section>
                                        <label class="input"> <i class="icon-append fa fa-user"></i>
                                            <input type="text" name="usuario" placeholder="Usuario" value="<%= usuario.usuario %>" readonly>
                                            <b class="tooltip tooltip-bottom-right">Ingrese su usuario</b> </label>
                                    </section>
				    <section>
                                        <label class="input"> <i class="icon-append fa fa-user"></i>
                                            <input type="text" name="email" placeholder="Email" value="<%= usuario.email %>" readonly>
                                            <b class="tooltip tooltip-bottom-right">Ingrese seu Email</b> </label>
                                    </section>
                                    <section>
                                        <label class="input">
                                            <input type="text" name="nome" placeholder="Nombre completo" value="<%= usuario.nome %>" readonly>
                                            <b class="tooltip tooltip-bottom-right">Ingrese su nombre</b> </label>
                                    </section>

                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="select">
                                                <select name="tipo" readonly>
                                                    <option value="" disabled="">Tipo</option>
                                                    <option value="OPER" <%= (usuario.tipo=='OPER') ? 'selected=""': '' %> >Operador</option>
                                                    <option value="ADMI" <%= (usuario.tipo=='ADMI') ? 'selected=""': '' %> >Admin</option>
                                                </select> <i></i> </label>
                                        </section>
                                        <section class="col col-6">
                                            <label class="select">
                                                <select name="estado" readonly>
                                                    <option value="" disabled="">Estado</option>
                                                    <option value="ACTI" <%= ( usuario.estado == 'ACTI') ? 'selected=""': '' %> >Activo</option>
                                                    <option value="INAC" <%= ( usuario.estado == 'INAC') ? 'selected=""': '' %> >Inactivo</option>
                                                </select> <i></i> </label>
                                        </section>
                                    </div>
                                    <section>
                                        <label class="input"> <i class="icon-append fa fa-lock"></i>
                                            <input type="text" name="senha" placeholder="Ingrese su password" value="<%= usuario.senha %>" readonly>
                                            <b class="tooltip tooltip-bottom-right">Ingrese su Password</b> </label>
                                    </section>
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary">
                                        Eliminar
                                    </button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<%- include ('partials/_bodyBottom'); %>	

<script>
	$(document).ready(function() {
	
	
		pageSetUp();
        
		
	
	});
	
</script>
<%- include ('partials/_footer'); %>
