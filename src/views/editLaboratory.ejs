<%- include ('partials/_header'); %>
<%- include ('partials/_navMenu'); %>
<%- include ('partials/_bodyUpper'); %>	
<div id="content">
	<div class="row">
		<div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
			<h1 class="page-title txt-color-blueDark">
				<i class="fa fa-fw fa-share-alt"></i> 
					Configuracoes
				<span>> 
					Atualizar Laboratorio
				</span>
			</h1>
		</div>
    </div>
    
    <section id="widget-grid" class="">
        <div class="row">
            <article class="col-sm-12 col-md-12 col-lg-12">
                <div class="jarviswidget jarviswidget-color-blueDark" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false">
                    <header>
                        <span class="widget-icon"> <i class="fa fa-plus"></i> </span>
                        <h2>Complete o formulario </h2>				
                    </header>
                    <div>
                        <div class="jarviswidget-editbox">
                        </div>
                        <div class="widget-body no-padding">
                            <form id="add-form" class="smart-form" novalidate="novalidate" method="POST">
                                <fieldset>
                                    <section>
                                        <label class="input"> 
					    Nome:
                                            <input type="text" name="nome" placeholder="Nome" value="<%= laboratorio.nome %>">
                                            <b class="tooltip tooltip-bottom-right">Ingrese o Nome</b> </label>
                                    </section>

				     <section>
                                        <label class="input">
					    Abreviatura:
                                            <input type="text" name="abreviatura" placeholder="Abreviatura" value="<%= laboratorio.abreviatura %>">
                                            <b class="tooltip tooltip-bottom-right">Ingrese o Abreviatura</b> </label>
                                    </section>

                                    <div class="row">
                                        <section class="col col-6">
                                            <label class="select">
						Estado:
                                                <select name="estado">
                                                    <option value="" disabled="">Estado</option>
                                                    <option value="ACTI" <%= (laboratorio.estado=='ACTI') ? 'selected=""': '' %> >Activo</option>
                                                    <option value="INAC" <%= (laboratorio.estado=='INAC') ? 'selected=""': '' %> >Inactivo</option>
                                                </select> <i></i> </label>
                                        </section>
                                    </div>
                                </fieldset>
                                <footer>
                                    <button type="submit" class="btn btn-primary">
                                        Actualizar
                                    </button>
                                </footer>
                            </form>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    </section>
</div>
<%- include ('partials/_bodyBottom'); %>	

<script src="/js/plugin/jquery-form/jquery-form.min.js"></script>
<script>
	$(document).ready(function() {
	
	
		pageSetUp();
        var errorClass = 'invalid';
			var errorElement = 'em';
			
			var $addForm = $('#add-form').validate({
				errorClass		: errorClass,
				errorElement	: errorElement,
				highlight: function(element) {
			        $(element).parent().removeClass('state-success').addClass("state-error");
			        $(element).removeClass('valid');
			    },
			    unhighlight: function(element) {
			        $(element).parent().removeClass("state-error").addClass('state-success');
			        $(element).addClass('valid');
			    },

			// Rules for form validation
				rules : {
					nome : {
						required : true
					},
					estado : {
						required : true
					},
					abreviatura : { required : true }
				},
		
				messages : {
					nome : {
						required : 'Por favor escriba un nombre'
					},
					estado : {
						required : 'Por favor seleccione el estado'
					},
					abreviatura: { required: 'Por favor escreva a abreviatura' }
				},
		
				// Do not change code below
				errorPlacement : function(error, element) {
					error.insertAfter(element.parent());
				}
			});
		
	
	});
	
</script>
<%- include ('partials/_footer'); %>
